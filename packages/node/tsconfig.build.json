{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "allowJs": true,
    "paths": {
      "@softarc/native-federation/domain": ["packages/core/dist/src/domain.d.ts"],
      "@softarc/native-federation/internal": ["packages/core/dist/src/internal.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "references": [ ]
}
