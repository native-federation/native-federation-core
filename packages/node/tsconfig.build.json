{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "allowJs": true,
    "paths": {
      "@softarc/native-federation/domain": ["packages/core/dist/src/domain.d.ts"],
      "@softarc/native-federation/internal": ["packages/core/dist/src/internal.d.ts"],
      "@softarc/native-federation-runtime": ["packages/runtime/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.spec.js"
  ],
  "references": []
}
