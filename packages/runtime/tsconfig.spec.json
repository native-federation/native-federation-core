{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./out-tsc/vitest",
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node", "vitest", "@types/trusted-types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.integration.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__test-helpers__/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["dist"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}
