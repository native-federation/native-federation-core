{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node", "vitest", "@types/trusted-types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.ts"
  ],
  "exclude": ["dist", "dist/**"]
}
