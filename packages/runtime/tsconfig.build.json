{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2022", "dom"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@softarc/native-federation/domain": ["packages/core/dist/src/domain.d.ts"],
      "@softarc/native-federation/internal": ["packages/core/dist/src/internal.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "vitest.config.mts",
    "src/test-setup.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__test-helpers__/**"
  ],
  "references": [
    { "path": "../core" } 
  ]
}
